  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach",
      "port": 9229,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "address": "0.0.0.0",
      "localRoot": "${workspaceFolder}",
      "name": "Debug Docker Compose Application",
      "port": 9229,
      "protocol": "inspector",
      "remoteRoot": "/build",
      "request": "attach",
      "restart": true,
      "type": "node"
    },
    {
      "command": "npm run test:watch",
      "name": "npm run test:watch",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "npm run start:dev",
      "name": "npm run start:dev",
      "request": "launch",
      "type": "node-terminal"
    }
  ]
}
